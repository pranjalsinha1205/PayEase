<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:orientation="vertical"
    android:background="@color/sky">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payease"
        android:textColor="@color/navy"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".065"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signUpLayout"
        android:layout_width="match_parent"
        android:layout_height="420sp"
        android:layout_marginTop="40sp"
        android:background="@drawable/curve"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".008"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/SignUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/signUpLayout"
            app:layout_constraintEnd_toEndOf="@id/signUpLayout"
            app:layout_constraintTop_toTopOf="@id/signUpLayout"
            app:layout_constraintBottom_toBottomOf="@id/signUpLayout"
            app:layout_constraintVertical_bias=".05"
            />
        <EditText
            android:id="@+id/SignUpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/email"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/SignUpText"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:background="@drawable/boundary"
            />
        <EditText
            android:id="@+id/SignUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/password"
            android:textColorHint="@color/black"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/SignUpEmail"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:padding="10dp"
            android:background="@drawable/boundary"
            />
        <Button
            android:id="@+id/SignUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/SignUpPassword"
            android:text="Sign Up"
            app:layout_constraintBottom_toBottomOf="@id/signUpLayout"
            app:layout_constraintVertical_bias=".1"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:layout_marginTop="20sp"
            app:layout_constraintStart_toStartOf="@id/SignUpButton"
            app:layout_constraintTop_toBottomOf="@id/SignUpButton"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/text"
            android:textColor="@color/blue"
            android:text="Sign In"
            android:layout_marginTop="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@id/SignUpButton"/>

        <TextView
            android:id="@+id/OR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintBottom_toBottomOf="@id/signUpLayout"
            app:layout_constraintStart_toStartOf="@id/SignUpButton"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintEnd_toEndOf="@id/SignUpButton"/>

        <ImageButton
            android:id="@+id/googleSignUp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintHeight_percent=".25"
            android:scaleType="fitXY"
            android:background="@drawable/googlesignup"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20sp"
            app:layout_constraintStart_toStartOf="@id/SignUpButton"
            app:layout_constraintEnd_toEndOf="@id/SignUpButton"
            app:layout_constraintBottom_toBottomOf="@id/signUpLayout"
            app:layout_constraintTop_toBottomOf="@id/OR"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>